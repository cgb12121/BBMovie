# ===================================
# BBMovie Frontend Environment Variables
# ===================================

# API Configuration
# =================
# Base URL for the backend API
API_URL=http://localhost:8765

# OAuth Configuration
# ===================
# Base URL for OAuth2 authorization endpoints
OAUTH_BASE_URL=http://localhost:8765/oauth2/authorization

# Google OAuth Client ID (for social login)
REACT_APP_GOOGLE_CLIENT_ID="your-google-client-id"

# Service URLs
# ============
# Payment service URL
REACT_APP_PAYMENT_SERVICE_URL=http://localhost:8765

# Watchlist service URL
REACT_APP_WATCHLIST_SERVICE_URL=http://localhost:8765

# AI service URL
REACT_APP_AI_SERVICE_URL=http://localhost:8765

# File service URL
REACT_APP_FILE_SERVICE_URL=http://localhost:8765

# Development Settings
# ====================
# Enable mock data for development (set to 'true' to use mock data instead of real API)
REACT_APP_USE_MOCK_DATA=false

# Debug mode (enables additional logging)
REACT_APP_DEBUG_MODE=false

# Feature flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_WATCHLIST=true
REACT_APP_ENABLE_PAYMENT=true
REACT_APP_ENABLE_SOCIAL_LOGIN=true

# Third-party Services
# ====================
# TMDB API Key (for movie data)
REACT_APP_TMDB_API_KEY="your-tmdb-api-key"

# Analytics
REACT_APP_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Cloudinary (for image optimization)
REACT_APP_CLOUDINARY_CLOUD_NAME="your-cloud-name"
REACT_APP_CLOUDINARY_UPLOAD_PRESET="your-upload-preset"

# WebSocket/Real-time features
REACT_APP_WEBSOCKET_URL=ws://localhost:8765/ws

# CDN Configuration
# =================
# Base URL for static assets
REACT_APP_CDN_URL=""

# Timeout Settings (in milliseconds)
# ==================================
# API request timeout
REACT_APP_API_TIMEOUT=30000

# File upload timeout
REACT_APP_UPLOAD_TIMEOUT=300000

# Retry Configuration
# ===================
# Number of retry attempts for failed requests
REACT_APP_API_RETRY_COUNT=3

# Image Configuration
# ===================
# Default image to show when movie poster is not available
REACT_APP_DEFAULT_POSTER_URL="https://via.placeholder.com/300x450"

# Max file upload size in bytes (e.g., 100MB)
REACT_APP_MAX_FILE_SIZE=104857600

# Error Handling
# ==============
# Image source for error states (using SVG data URL to ensure availability)
ERROR_IMG_SRC='data:image/svg+xml;base64,'

# Environment-specific settings
# =============================
# Environment name (dev, staging, prod)
REACT_APP_ENVIRONMENT=development

# Version tracking
REACT_APP_VERSION=1.0.0

# Date format settings
REACT_APP_DATE_FORMAT="MM/DD/YYYY"

# Currency settings
REACT_APP_CURRENCY=USD

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# Build settings
# ==============
# Generate source maps (set to false for production builds)
GENERATE_SOURCE_MAP=true